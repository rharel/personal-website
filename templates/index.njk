      <picture>
        <source srcset="/about/portrait.jpg?as=webp&height=128" type="image/webp">
        <img
          class="portrait"
          src="/about/portrait.jpg?height=128"
          alt="Portrait"
          width="128"
          height="128">
      </picture>
    </section>
    <section class="featured-projects">
      {% for project in projects %}
        <a class="project" href="{{ project.url }}">
          {% if project.image_source_fallback %}
            <picture>
              <source srcset="{{ project.image_source | safe }}" type="image/webp">
              <img
                class="thumbnail"
                src="{{ project.image_source_fallback | safe }}"
                alt="{{ project.image_alt }}"
                width="128"
                height="128">
            </picture>
          {% else %}
             <img
              class="thumbnail"
              src="{{ project.image_source | safe }}"
              alt="{{ project.image_alt }}"
              width="128"
              height="128">
          {% endif %}
          <h1 class="title">{{ project.title }}</h1>
        </a>
      {% endfor %}
    </section>
  </main>
{% endblock %}